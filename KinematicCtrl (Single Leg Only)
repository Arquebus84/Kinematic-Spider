using System;
using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class KinematicCtrl : MonoBehaviour
{
    /**
            Kinematic Equations:
    x_f = v_avg*t + x_0
    x_f = x_0 + v_0t + 0.5*a*t^2
    v = v_0 + at
    v^2 = (v_0)^2 + 2a(x - x_0) ===>    v = sqrt[ (v_0)^2 + 2a(x - x_0) ]     
     */

    //  Parameters
    public LayerMask groundLayer;

    //  Hips (Base) will act as x_0; futureFootPosition will be x (final position)
    public Transform FootHipBase, footMesh, footIKPos, futureFootPosition;

    [Header("Main Parameters")]

    // Distance (targetPosVector - footPosVector) will be deltaX
    public float Distance_FT;               // For every index, organize by even and odd in order to retain the kinematics with respect to those objects (foot)
    public float Angle_FT;
    // Velocity at t = 0 will be 0
    public float Velocity;            // Velocity will be different when changing from evens to odds (one foot after another)

    [Header("Calculated Parameters")]
    public bool _isMovingEven;
    //public bool _isMovingOdd;
    private bool temp = false;          // Temp is used to switch between even and odd states
    public float x_valueEven = 0, x_valueOdd = 0;

    // The highest point being calculated depends on the effect of velocity on each feet (greater distance, the greater the height)
    public float evenHeight, oddHeight;

    public float maxOddDist, maxEvenDist;

    [Header("Editable Parameters")]

    public float acceleration = 5;
    public float heightDamping = 0.6f; //set to {0 < heightDamping < 1}

    // Reduce the amount of steps to take by incrementing the stepping reduction (Recommended: greater than 10 will allow for the feet to Lerp faster)
    public float steppingReduction = 15; // set to {0 < steppingReduction < 1} for more steps, or {1 < steppingReduction < infinity} for less steps

    public float maxDistance = 0.2f;
    public float minDistance = 0.05f;
    public float maxAngle = 1.55f;
    public float minAngle = 0.2f;

    // Update is called once per frame
    public void Update()
    {
        //Change it to ensure that each even leg will move after the odd legs have all moved (then experiment with randomization)
        groundCheck(footMesh, footIKPos);

        //  Calculate distance, angle, and velocity for even and odd legs
        //  Angle converted in Radians
        //  I_Velocity is 0, and time will not be specified, therefore
        //  Velocity = sqrt[(I_velocity)^2 + (acceleration * distance_FT)]

        Distance_FT = Mathf.Abs(Vector3.Distance(footIKPos.position, futureFootPosition.position));
        Angle_FT = Mathf.Abs(Mathf.DeltaAngle(footIKPos.eulerAngles.y, futureFootPosition.eulerAngles.y)) * Mathf.Deg2Rad;
        Velocity = (Angle_FT < maxAngle) ? Mathf.Sqrt(acceleration * Distance_FT) : Mathf.Sqrt(acceleration * Distance_FT * Angle_FT);

        CheckDistanceEven(Distance_FT, Angle_FT);

        // NOTE: Use temp to ensure that both booleans do not "lock", i.e. one must deactivate the other (similar to temp switching)
        if (_isMovingEven && temp == false)
        {
            EvenFootVerticalPos(Velocity);
            translateFoot(Velocity, x_valueEven);
        }
        else
        {
            temp = false;
        }

    }

    public void CheckDistanceEven(float distance_FT, float angle_FT)
    {
        // If either the distance or angle have surpassed their respective thresholds, then the foot will move
        //      (The x_value is used to ensure that when the foot is lifted, it will return to the ground)
        // If the foot is lifted, continue the lifting until it resets its rotation to 0
        if ((distance_FT > maxDistance || angle_FT > maxAngle))
        {
            maxEvenDist = distance_FT;
            _isMovingEven = true;
        }
        // For clarity, both position and angle have to be minimized in order for foot to completely rest
    }

    public void groundCheck(Transform foot, Transform pos)
    {
        foot.position = pos.position;
        foot.rotation = pos.rotation;

        Vector3 groundBase = new Vector3(futureFootPosition.position.x, FootHipBase.position.y, futureFootPosition.position.z);
        Ray ray = new Ray(groundBase, -transform.up);
        RaycastHit hitInfo;

        Vector3 hitPoint;
        if (Physics.Raycast(ray, out hitInfo, 4.0f, groundLayer))
        {
            hitPoint = new Vector3(futureFootPosition.position.x, hitInfo.point.y + 0.25f, futureFootPosition.position.z);
            futureFootPosition.position = hitPoint;

            Debug.DrawLine(ray.origin, hitInfo.point, Color.green);
        }
        else
        {
            Debug.DrawLine(ray.origin, ray.origin + ray.direction * 2.0f, Color.red);
            return;
        }
    }

    // With multiple feet, every odd index (1, 3, n) will be translated after every even index (0, 2)
    public void translateFoot(float velocity, float x_value)
    {
        if (x_value < Mathf.PI)
        {
            // Reduce the speed using steppingReduction
            footIKPos.position = Vector3.Lerp(footIKPos.position, futureFootPosition.position, velocity * steppingReduction * Time.deltaTime);
            footIKPos.rotation = Quaternion.Lerp(footIKPos.rotation, futureFootPosition.rotation, velocity * steppingReduction * Time.deltaTime);
        }
        else
        {
            x_value = 0;
        }
    }

    public void EvenFootVerticalPos(float velocity)
    {
        evenHeight = (velocity * heightDamping);

        if (x_valueEven <= Mathf.PI)
        {
            x_valueEven += velocity * steppingReduction * Time.deltaTime;     // If isMoving is false, x will be 0 (Look in translateFoot())
        }
        else
        {
            x_valueEven = 0;
            _isMovingEven = false;
            //temp = true;
            //_isMovingOdd = true;
        }

        // Y position modifies the vertical position of the foot
        // Using a*Sin(n*x) + h, modify the amplitude (a) and the duration (n) using velocity; use target vertical position to adjust the height (h) of the footstep
        Vector3 y_Pos = new Vector3(footIKPos.position.x,
            futureFootPosition.position.y + (evenHeight * Mathf.Sin(x_valueEven)),
            footIKPos.position.z);
        footIKPos.position = y_Pos;
    }
}
